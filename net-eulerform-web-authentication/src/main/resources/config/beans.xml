<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:aop="http://www.springframework.org/schema/aop"
    xmlns:tx="http://www.springframework.org/schema/tx"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.5.xsd
           http://www.springframework.org/schema/aop
           http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
           http://www.springframework.org/schema/tx 
           http://www.springframework.org/schema/tx/spring-tx-2.5.xsd">
    
    <bean id="userContext" class="net.eulerform.web.module.authentication.util.UserContext">
        <property name="userDetailsService" ref="userDetailsService"/>
        <property name="userService" ref="userService"/>
    </bean>
    
    <bean id="userDao" class="net.eulerform.web.module.authentication.dao.impl.UserDao">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>
    <bean id="groupDao" class="net.eulerform.web.module.authentication.dao.impl.GroupDao">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>
    <bean id="authorityDao" class="net.eulerform.web.module.authentication.dao.impl.AuthorityDao">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>
    
    <bean id="userService" name="userDetailsService" class="net.eulerform.web.module.authentication.service.impl.UserService">
        <property name="userDao" ref="userDao"/>
        <property name="passwordEncoder" ref="passwordEncoder"/>
    </bean>
    
    <bean id="authorityService" class="net.eulerform.web.module.authentication.service.impl.AuthorityService">
        <property name="authorityDao" ref="authorityDao"/>
        <property name="groupDao" ref="groupDao"/>
    </bean>   
    
    <bean id="passwordEncoder" class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder" />
    
    <import resource="beans-security.xml"/>
</beans>
